<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindaRise.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

        <Label
                Text="Welcome to Find-A-Rise" FontSize="50" HorizontalOptions="Center"/>
            <Label x:Name="ClockL" Text="00:00:00" FontSize="35" HorizontalOptions="Center"/>
            <Label x:Name="RiseL" Text="The sun will rise at loading..." FontSize="30" HorizontalOptions="Center"/>
            <Label x:Name="SetL" Text="The sun will set at loading..." FontSize="30" HorizontalOptions="Center"/>
            <Button x:Name="CordToggle" Text="Show Cordanates" Clicked="CordTog"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
